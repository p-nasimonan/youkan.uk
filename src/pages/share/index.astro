---
import Layout from "../../layouts/Layout.astro";
import { sharedFiles } from "../../consts/files";

const files = sharedFiles;
---

<Layout title="Shared Files | youkan.uk">
    <main>
        <div class="glass-panel content-card">
            <h1>Shared Files</h1>
            <p class="subtitle">Publicly shared resources</p>

            <div class="file-list">
                {
                    files.map((file) => (
                        <a href={`/share/${file.id}`} class="file-item">
                            <div class="file-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <>
                                        <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z" />
                                        <polyline points="13 2 13 9 20 9" />
                                    </>
                                </svg>
                            </div>
                            <div class="file-info">
                                <h3>{file.title}</h3>
                                <p>{file.description}</p>
                                <span class="file-date">{file.date}</span>
                            </div>
                            <div class="arrow-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <>
                                        <line x1="5" y1="12" x2="19" y2="12" />
                                        <polyline points="12 5 19 12 12 19" />
                                    </>
                                </svg>
                            </div>
                        </a>
                    ))
                }
            </div>

            <div class="back-link">
                <a href="/" class="btn secondary">Back to Home</a>
            </div>
        </div>
    </main>
</Layout>

<style>
    main {
        width: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }

    .content-card {
        padding: 3rem;
        max-width: 800px;
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        animation: fadeUp 0.6s ease-out;
    }

    h1 {
        font-size: 2.5rem;
        margin: 0;
        font-weight: 700;
        text-align: center;
    }

    .subtitle {
        text-align: center;
        color: var(--color-text-muted);
        margin-top: -1rem;
    }

    .file-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .file-item {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        text-decoration: none;
        color: inherit;
        transition: all 0.2s ease;
    }

    .file-item:hover {
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-2px);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .file-icon {
        color: var(--color-primary);
        background: rgba(123, 97, 255, 0.1);
        padding: 0.8rem;
        border-radius: 12px;
    }

    .file-info {
        flex: 1;
    }

    .file-info h3 {
        margin: 0 0 0.4rem 0;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .file-info p {
        margin: 0;
        font-size: 0.95rem;
        color: var(--color-text-muted);
        line-height: 1.4;
    }

    .file-date {
        display: block;
        margin-top: 0.5rem;
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.4);
    }

    .arrow-icon {
        color: var(--color-text-muted);
        transition: transform 0.2s ease;
    }

    .file-item:hover .arrow-icon {
        transform: translateX(4px);
        color: white;
    }

    .back-link {
        display: flex;
        justify-content: center;
        margin-top: 1rem;
    }

    .btn {
        display: inline-flex;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn.secondary {
        background: rgba(255, 255, 255, 0.05);
        color: var(--color-text-muted);
    }

    .btn.secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
