---
import Layout from '@layouts/Layout.astro';
import { css } from '@styles/css';

const metaProps = {
  title: '【VRChat】ようかん',
  description: '好きな食べ物はようかんです!えっと紅茶も好きなの。ラテアートがんばるからね♪',
  keywords: ['かわいい', 'VRChat', 'ぷぷりえ', 'ようかん'],
  author: 'youkan',
  ogp: {
    title: '【VRChat】ようかん',
    description: '好きな食べ物はようかんです!えっと紅茶も好きなの。ラテアートがんばるからね♪',
    type: 'article' as const,
    siteName: 'youkan.uk'
  }
};
---

<Layout {...metaProps}>
  <div class={css({
    maxWidth: '4xl',
    margin: '0 auto',
    padding: '2rem',
    lineHeight: '1.6'
  })}>
    <a 
      href="../"
      class={css({
        display: 'inline-flex',
        alignItems: 'center',
        marginBottom: '2rem',
        color: 'purple.600',
        textDecoration: 'none',
        _hover: { textDecoration: 'underline' }
      })}
    >
      ← 選択画面に戻る
    </a>

    <div class={css({ textAlign: 'center', marginBottom: '3rem' })} transition:name="card-aircraft">
      <h1 class={css({
        fontSize: '3xl',
        fontWeight: 'bold',
        marginBottom: '1rem',
        color: 'purple.800'
      })} transition:name="button-aircraft">
        飛行機
      </h1>
      <p class={css({ fontSize: 'lg', color: 'purple.600' })}>
        飛行ロボコンについて
      </p>
    </div>

    <div class={css({
      display: 'grid',
      gap: '2rem',
      gridTemplateColumns: { base: '1fr', lg: 'repeat(2, 1fr)' }
    })}>
      <!-- 夢・目標セクション -->
      <section class={css({
        padding: '2rem',
        backgroundColor: 'purple.50',
        borderRadius: 'lg',
        border: '2px solid',
        borderColor: 'purple.200'
      })}>
        <h2 class={css({
          fontSize: '2xl',
          fontWeight: 'bold',
          marginBottom: '1rem',
          color: 'purple.800'
        })}>
          夢・目標 ⭐
        </h2>
        <div class={css({ color: 'purple.700' })}>
          <ul class={css({ paddingLeft: '1rem' })}>
            <li>🌟 革新的なプロダクトの創造</li>
            <li>🌍 世界中の人々に価値を提供</li>
            <li>🎯 テクノロジーで社会問題を解決</li>
            <li>🌱 次世代のエンジニア育成</li>
          </ul>
        </div>
      </section>

      <!-- 冒険・チャレンジセクション -->
      <section class={css({
        padding: '2rem',
        backgroundColor: 'purple.50',
        borderRadius: 'lg',
        border: '2px solid',
        borderColor: 'purple.200'
      })}>
        <h2 class={css({
          fontSize: '2xl',
          fontWeight: 'bold',
          marginBottom: '1rem',
          color: 'purple.800'
        })}>
          冒険・チャレンジ 🗺️
        </h2>
        <div class={css({ color: 'purple.700' })}>
          <ul class={css({ paddingLeft: '1rem' })}>
            <li>🚁 新しい技術への挑戦</li>
            <li>🏔️ 未知の分野への探求</li>
            <li>🎪 クリエイティブなプロジェクト</li>
            <li>🌈 異分野コラボレーション</li>
          </ul>
        </div>
      </section>
    </div>

  </div>
</Layout>
