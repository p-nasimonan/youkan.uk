---
import Layout from '@layouts/Layout.astro';
import SelectionScreen from '@components/SelectionScreen.astro';

// 背景画像をインポート（最適化あり）
import vrcBg from '@assets/images/backgrounds/vrc-bg.svg';
import engineerBg from '@assets/images/backgrounds/engineer-bg.svg';
import aircraftBg from '@assets/images/backgrounds/aircraft-bg.svg';

const options = [
  {
    id: 'vrc',
    title: 'VRChat',
    description: 'VRChatでの活動や交流について',
    backgroundImage: vrcBg.src,
    href: './vrc/'
  },
  {
    id: 'engineer',
    title: 'エンジニア',
    description: '技術スキル、開発経験について',
    backgroundImage: engineerBg.src,
    href: './engineer/'
  },
  {
    id: 'aircraft',
    title: '飛行機',
    description: '飛行ロボコンについて',
    backgroundImage: aircraftBg.src,
    href: './aircraft/'
  }
];

const metaProps = {
  title: 'ようかんの自己紹介ページ',
  description: 'あなたの興味のある分野を選択して、それぞれの自己紹介をご覧ください。かわいい、エンジニア、空飛ぶ',
  keywords: ['自己紹介', 'プロフィール', 'エンジニア', 'ポートフォリオ'],
  author: 'youkan',
  ogp: {
    title: 'ようかんの自己紹介ページ',
    description: '3つの個性から選んで自己紹介をご覧ください',
    type: 'website' as const,
    siteName: 'youkan.uk'
  }
};
---

<Layout {...metaProps}>
  <SelectionScreen options={options} />
</Layout>
