<style>
	main {
		width: 100%;
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 1rem;
	}

	.profile-card {
		padding: 3rem 4rem;
		text-align: center;
		max-width: 500px;
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
		animation: enter 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		margin: 0;
		line-height: 1.1;
		letter-spacing: -0.02em;
	}

	.subtitle {
		font-size: 1.25rem;
		color: var(--color-text-muted);
		margin: 0;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		font-weight: 400;
	}

	.bio {
		margin-top: 1rem;
		font-size: 1.1rem;
		line-height: 1.6;
		color: rgba(255, 255, 255, 0.9);
	}

	.social-links {
		display: flex;
		gap: 1rem;
		margin-top: 2rem;
		width: 100%;
		justify-content: center;
	}

	.social-btn {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		border-radius: 12px;
		background: rgba(255, 255, 255, 0.05);
		color: white;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.social-btn:hover {
		background: rgba(255, 255, 255, 0.15);
		transform: translateY(-2px);
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
	}

	.social-btn.github:hover {
		border-color: #6e5494;
		box-shadow: 0 4px 20px rgba(110, 84, 148, 0.2);
	}

	.social-btn.x-twitter:hover {
		border-color: #1da1f2; /* X color is actually black/white but nice to have a subtle blue tint or just white glow */
		box-shadow: 0 4px 20px rgba(29, 161, 242, 0.2);
	}

	.social-btn.share:hover {
		border-color: var(--color-secondary);
		box-shadow: 0 4px 20px rgba(0, 240, 255, 0.2);
	}

	@media (max-width: 600px) {
		.profile-card {
			padding: 2rem;
		}

		h1 {
			font-size: 3rem;
		}

		.social-links {
			flex-direction: column;
		}

		.social-btn {
			justify-content: center;
		}
	}

	@keyframes enter {
		from {
			opacity: 0;
			transform: translateY(20px) scale(0.95);
		}
		to {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}
</style>
