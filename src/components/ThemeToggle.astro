    }

    private animateDarkToLight() {
      // æœˆã‚’å³å´ã®ç”»é¢å¤–ã«ç§»å‹•
      this.moonElement.style.transition = 'transform 1.0s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
