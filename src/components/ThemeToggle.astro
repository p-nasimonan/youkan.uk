      // å¤ªé™½ã‚’å³å´ã®ç”»é¢å¤–ã«ç§»å‹•
      this.sunElement.style.transition = 'transform 1.0s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
      this.sunElement.style.transform = 'translateX(calc(120vw - 50%)) rotate(360deg)';
      
