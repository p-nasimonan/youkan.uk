---
import { css } from '@styles/css';

export interface SelectionOption {
  id: string;
  title: string;
  description: string;
  emoji: string;
  href: string;
}

interface Props {
  options: SelectionOption[];
}

const { options } = Astro.props;
---

<div class={css({
  display: 'flex',
  flexDirection: 'column',
  alignItems: 'center',
  justifyContent: 'center',
  minHeight: '100vh',
  padding: '2rem',
  backgroundColor: 'gray.50',
  fontFamily: 'system-ui, -apple-system, sans-serif'
})}>
  <h1 class={css({
    fontSize: '3xl',
    fontWeight: 'bold',
    marginBottom: '1rem',
    color: 'gray.800'
  })}>
    自己紹介を見る
  </h1>
  
  <p class={css({
    fontSize: 'lg',
    color: 'gray.600',
    marginBottom: '3rem',
    textAlign: 'center'
  })}>
    あなたの興味のある分野を選択してください
  </p>

  <div class={css({
    display: 'grid',
    gridTemplateColumns: { base: '1fr', md: 'repeat(2, 1fr)', lg: 'repeat(3, 1fr)' },
    gap: '1.5rem',
    width: '100%',
    maxWidth: '4xl'
  })}>
    {options.map((option) => (
      <a
        href={option.href}
        class={css({
          display: 'block',
          padding: '2rem',
          backgroundColor: 'white',
          borderRadius: 'lg',
          boxShadow: 'md',
          textDecoration: 'none',
          transition: 'all 0.2s',
          _hover: {
            transform: 'translateY(-2px)',
            boxShadow: 'lg'
          }
        })}
      >
        <div class={css({
          fontSize: '3xl',
          marginBottom: '1rem',
          textAlign: 'center'
        })}>
          {option.emoji}
        </div>
        
        <h2 class={css({
          fontSize: 'xl',
          fontWeight: 'bold',
          marginBottom: '0.5rem',
          color: 'gray.800',
          textAlign: 'center'
        })}>
          {option.title}
        </h2>
        
        <p class={css({
          color: 'gray.600',
          textAlign: 'center'
        })}>
          {option.description}
        </p>
      </a>
    ))}
  </div>
</div>
